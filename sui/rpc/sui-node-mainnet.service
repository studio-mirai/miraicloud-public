[Unit]
Description=sui-node-mainnet
After=network.target

[Service]
User=mirai
Group=mirai
ExecStart=/opt/sui/mainnet/bin/sui-node --config-path /opt/sui/mainnet/config/config.yaml
Restart=always
RestartSec=5
LimitNOFILE=65535
CPUAffinity=2 18 3 19 4 20 5 21 6 22 7 23 8 24 9 25
MemoryMax=128G

[Install]
WantedBy=multi-user.target
